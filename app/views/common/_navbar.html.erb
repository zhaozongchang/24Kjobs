<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog" role="document">
    <div class="loginmodal-container">
       <h2 style="text-align:center"><i class="fa fa-sign-in">登入</h2></i>
       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <div class="form-inputs">
           <%= f.input :email,placeholder: "邮箱", label: false %>
           <%= f.input :password, placeholder: "密码", label: false%>
           <%= f.input :remember_me,label: '记住我', as: :boolean if devise_mapping.rememberable? %>
         </div>
         <div id="wangji">
           <%= link_to "忘记密码？", new_password_path(resource_name) %>
         </div>
         <div class="form-actions">
           <%= f.button :submit, "登入" %>
         </div>

       <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="loginmodal-container">
      <h2 style="text-align:center"><i class="fa fa-user-plus">注册</h2></i>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, label: false, placeholder: '请输入常用邮箱', equired: true, autofocus: true %>
          <%= f.input :name,label: false, placeholder: '请输入真实姓名'%>
          <%= f.input :is_admin, label: false,  collection:  [['一般用户', false], ['企业用户', true]], required: true %>
          <%= f.input :password, label: false, placeholder: '请输入6~16位密码',required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation,label: false, placeholder: '请确认密码', required: true %>
        </div>
        <div class="form-actions">
            <%= f.button :submit, "注册" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
